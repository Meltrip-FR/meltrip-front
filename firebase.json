{
  "hosting": {
    "public": "build",
    "target": "default",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/",
        "destination": "/index.html"
      },
      {
        "source": "/teams",
        "destination": "/teams.html"
      },
      {
        "source": "/confirm",
        "destination": "/confirm.html"
      },
      {
        "source": "/confirm/[user_tag]",
        "destination": "/confirm/[user_tag].html"
      },
      {
        "source": "/confirm/[user_tag]/[password]",
        "destination": "/confirm/[user_tag]/[password].html"
      },
      {
        "source": "/blog",
        "destination": "/blog.html"
      },
      {
        "source": "/blog/articles/[id]",
        "destination": "/blog/article/[id].html"
      },
      {
        "source": "/blog/tags/[id]",
        "destination": "/blog/tag/[id].html"
      },
      {
        "source": "/contact",
        "destination": "/contact.html"
      },
      {
        "source": "/help",
        "destination": "/help.html"
      },
      {
        "source": "/auth/signin",
        "destination": "/auth/signin.html"
      },
      {
        "source": "/auth/signup",
        "destination": "/auth/signup.html"
      },
      {
        "source": "/user/accessibility",
        "destination": "/user/accessibility.html"
      },
      {
        "source": "/user/dashboard",
        "destination": "/user/dashboard.html"
      },
      {
        "source": "/user/organization",
        "destination": "/user/organization.html"
      },
      {
        "source": "/user/partner",
        "destination": "/user/partner.html"
      },
      {
        "source": "/user/payments",
        "destination": "/user/payments.html"
      },
      {
        "source": "/user/profil",
        "destination": "/user/profil.html"
      },
      {
        "source": "/user/seminar",
        "destination": "/user/seminar.html"
      },
      {
        "source": "/500",
        "destination": "/500.html"
      },
      {
        "source": "/404",
        "destination": "/404.html"
      }
    ]
  }
}
